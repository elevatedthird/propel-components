{% set link_title = link_text|default('Read more') %}
<article class="cursor-pointer group relative flex">
  <div class="bg-gray-100">
    <div class="aspect-16/9">
      {{ media }}
    </div>
  </div>
  <div class="my-4">
    <h3 class="h3 inline-block">
      <a href="{{ url }}" aria-label="{{ link_title }}" title="{{ link_title }}" class="after:absolute after:inset-0"> {{ heading }}</a>
    </h3>
    <div class="text-formatted">
      {{ body }}
    </div>
    <div class="mt-4">
      <span aria-hidden="true" class="link-next group-hover:gap-3"> {{ link_title|default('Read more') }} </span>
    </div>
  </div>
</article>
